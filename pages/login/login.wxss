/* pages/login/login.wxss */

page {
  height: 100%;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 0;
  box-sizing: border-box;
  background-color: #f2f2f2;
}

/*登录图片*/

.login-icon {
  flex: none;
}

.login-img {
  width: 750rpx;
  background: #fff;
}

/*表单内容*/

.login-from {
  /* margin-top: 20rpx; */
  flex: auto;
  width: 100%;
}

.inputView {
  border-radius: 4rpx;
  background-color: #fff;
  line-height: 44px;
  margin-left: 2rpx;
  margin-right: 2rpx;
}

/*输入框*/

.nameImage, .keyImage {
  margin-left: 22px;
  width: 14px;
  height: 14px;
}

.loginLab {
  margin: 15px 15px 15px 10px;
  color: #545454;
  font-size: 14px;
}

.inputText {
  flex: block;
  float: right;
  width: 300rpx;
  text-align: right;
  margin-right: 22px;
  margin-top: 11px;
  color: #ccc;
  font-size: 14px;
}

.line {
  width: 100%;
  height: 1px;
  background-color: #ccc;
  margin-top: 1px;
}

/*按钮*/

.loginBtnView {
  width: 100%;
  height: auto;
  display: flex;
  margin-left: 5%;
  background-color: #f2f2f2;
  flex-direction: column;
}

.loginBtn {
  justify-content: center;
  margin: 5rpx;
  width: 90%;
  margin-top: 20px;
}

.bindBtn {
  margin: 5rpx;
  width: 50%;
  margin-top: 20px;
}

#register{
  color:#4896ff;
  justify-content:center;
  display:flex;
  margin-top:25rpx;
}

.textButton{
    color:#4896ff;
    background-color:#F2F2F2;
    line-height:65rpx;
    font-size:36rpx;
    padding-left:10rpx;
  padding-right:0rpx;
}
.textButton::after{
    border:0rpx solid rgba(255,255, 255, 0);
}